# NOWPayments Configuration
# Copy this file to .env and fill in your values

# ===========================================
# REQUIRED - API Credentials
# ===========================================

# Your NOWPayments API Key
# Get it from: https://account.nowpayments.io/api-keys
NOWPAYMENTS_API_KEY=your_api_key_here

# IPN (Instant Payment Notification) Secret Key
# Get it from: https://account.nowpayments.io/payment-settings
NOWPAYMENTS_IPN_SECRET=your_ipn_secret_here

# ===========================================
# OPTIONAL - Authentication for Payouts
# ===========================================

# Your NOWPayments account email (required for payout operations)
NOWPAYMENTS_EMAIL=your_email@example.com

# Your NOWPayments account password (required for payout operations)
NOWPAYMENTS_PASSWORD=your_password_here

# ===========================================
# OPTIONAL - Environment Settings
# ===========================================

# Enable sandbox/test mode (true/false)
# Set to 'true' for testing, 'false' for production
SANDBOX_MODE=false

# Default IPN Callback URL (webhook endpoint)
IPN_CALLBACK_URL=https://yourdomain.com/webhooks/nowpayments
